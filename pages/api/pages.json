---
layout: simple
permalink: /api/pages.json
---
{
  "entries": [
    {% for article in site.pages %}
    {
      "title": "{{ article.title }}",
      "url": "{{ site.baseurl }}{{ article.url }}",
      "body": "{{ article.content | strip_html | strip_newlines | replace: '\', '\\\\' | replace: '"', '\\"' }}",
      "excerpt": "{{ article.content | strip_html | strip_newlines | truncate: 140, 'â€¦' | replace: '\', '\\' | replace: '"', '\\"' }} "
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
