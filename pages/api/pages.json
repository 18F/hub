---
layout: simple
permalink: /api/pages.json
---
{
  "entries": [
    {% for article in site.pages %}
    {
      "title": "{{ article.title }}",
      "url": "{{ site.baseurl }}{{ article.url }}",
      "body": "{{ article.content | strip_html | condense | replace: '\', '\\\\' | replace: '"', '\\"' }}"
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
